<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_gray_bkgrd"
    android:layerType="hardware"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/forms_inner_padding" >

        <ImageView
            android:id="@+id/sending_deposit_loading_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/forms_inner_padding"
            android:contentDescription="@string/empty"
            android:src="@drawable/bank_fill_1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/sending_deposit_loading_image"
            android:orientation="vertical"
            android:padding="@dimen/forms_inner_padding" >

            <TextView
                android:id="@+id/sending_deposit_title_label"
                style="@style/title_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/between_related_elements_padding"
                android:text="@string/sending_deposit_title_text" />

            <TextView
                android:id="@+id/sending_deposit_detail_label"
                style="@style/sub_copy_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sending_deposit_detail_text"
                android:paddingRight="@dimen/between_related_elements_padding" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>