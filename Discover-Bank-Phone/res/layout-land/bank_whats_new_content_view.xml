<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bank_whats_new_action_bar_height"
            android:background="@color/orange_link_idicator"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/title"
                style="@style/bank_whats_new_action_bar"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/groups_of_elements_padding"
                android:layout_toLeftOf="@+id/close"
                android:gravity="center_vertical"
                android:text="@string/bank_whats_new_action_bar_title" />

            <ImageButton
                android:id="@+id/close"
                android:layout_width="@dimen/bank_whats_new_action_bar_height"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bank_whats_new_action_button_selector"
                android:contentDescription="@string/empty"
                android:padding="@dimen/groups_of_elements_padding"
                android:paddingRight="@dimen/groups_of_elements_padding"
                android:src="@drawable/x_gray" />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/header" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:id="@+id/page_indicators"
            android:layout_width="0dp"
            android:layout_height="@dimen/bank_whats_new_footer_height"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>