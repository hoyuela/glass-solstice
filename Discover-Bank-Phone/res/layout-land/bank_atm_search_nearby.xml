<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_gray_bkgrd" >

    <FrameLayout
        android:id="@+id/discover_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_search_bar"
        android:layout_alignParentBottom="true" 
        android:layout_alignParentTop="true"/>

    <FrameLayout
        android:id="@+id/discover_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/full_search_bar"/>

    <com.discover.mobile.bank.atm.AtmLocatorMapSearchBar
        android:id="@+id/full_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <com.discover.mobile.common.help.HelpWidget
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/map_navigation_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/atm_search_bar_background"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/forms_inner_padding"
        android:paddingLeft="@dimen/forms_inner_padding"
        android:paddingRight="@dimen/forms_inner_padding"
        android:paddingTop="@dimen/forms_inner_padding"
        android:weightSum="2" >

        <Button
            android:id="@+id/list_nav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/between_related_elements_padding"
            android:layout_weight="1"
            android:background="@drawable/atm_listview_button_landscape" />

        <Button
            android:id="@+id/map_nav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/between_related_elements_padding"
            android:layout_weight="1"
            android:background="@drawable/atm_pinview_button_ds_landscape" />
    </LinearLayout>

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>