<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Angular Gradient -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="135"
                android:centerColor="#88FFFFFF"
                android:centerX="0.15"
                android:endColor="#00FFFFFF"
                android:startColor="#d6d6d4" >
            </gradient>

            <corners android:bottomLeftRadius="3dp" />
        </shape>
    </item>
    <!-- Bottom Gradient -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#44FFFFFF"
                android:centerX="1.0"
                android:endColor="#00FFFFFF"
                android:startColor="#d6d6d4" >
            </gradient>

            <corners android:bottomLeftRadius="3dp" />
        </shape>
    </item>

</layer-list>