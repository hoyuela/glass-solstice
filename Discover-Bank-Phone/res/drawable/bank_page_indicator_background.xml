<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >

            <!-- Field stoke with some transparency -->
            <solid android:color="#d5dce3e5" />
        </shape>
    </item>
    <item android:top="3dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="@color/field_stroke"
                android:endColor="#d5dce3e5"
                android:startColor="@color/field_stroke" />
        </shape>
    </item>

</layer-list>