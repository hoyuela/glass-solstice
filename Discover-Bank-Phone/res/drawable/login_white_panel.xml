<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Top Gradient -->
    <item
        android:bottom="@dimen/bottom_pad"
        android:left="@dimen/left_pad"
        android:right="@dimen/right_pad">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#FF000000"
                android:centerX="0.95"
                android:endColor="#00000000"
                android:startColor="#FF000000" >
            </gradient>
        </shape>
    </item>

    <!-- Left Gradient -->
    <item
        android:bottom="@dimen/bottom_pad"
        android:right="@dimen/right_pad"
        android:top="@dimen/top_pad">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="180"
                android:centerColor="#FF000000"
                android:centerX="0.9"
                android:endColor="#00000000"
                android:startColor="#FF000000" >
            </gradient>
        </shape>
    </item>

    <!-- Right Gradient -->
    <item
        android:bottom="@dimen/bottom_pad"
        android:left="@dimen/left_pad"
        android:top="@dimen/top_pad">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="0"
                android:centerColor="#FF000000"
                android:centerX="0.9"
                android:endColor="#00000000"
                android:startColor="#FF000000" >
            </gradient>
        </shape>
    </item>

    <!-- Bottom Gradient -->
    <item
        android:left="@dimen/left_pad"
        android:right="@dimen/right_pad"
        android:top="@dimen/top_pad">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:centerColor="#FF000000"
                android:centerX="0.9"
                android:endColor="#00000000"
                android:startColor="#FF000000" >
            </gradient>
        </shape>
    </item>

    <!-- White Panel -->
    <item
        android:bottom="@dimen/bottom_pad"
        android:left="@dimen/left_pad"
        android:right="@dimen/right_pad"
        android:top="@dimen/top_pad">
        <shape>
            <solid android:color="#FFFFFFFF" />

            <corners android:radius="3dp" />
        </shape>
    </item>

</layer-list>