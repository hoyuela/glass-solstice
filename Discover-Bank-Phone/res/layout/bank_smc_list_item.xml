<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/large_margin"
    android:paddingRight="@dimen/large_margin"
     >
    <TextView 
        android:id="@+id/message_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/message_account"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@+id/message_title"
        android:textColor="@color/field_copy"
        />
    <TextView
        android:id="@+id/message_date"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:gravity="center" 
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_toLeftOf="@+id/close_button"
        />
	<ImageButton 
	    android:id="@+id/close_button"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:src="@drawable/common_smc_gray_x"
	    android:contentDescription="@string/list_item_delete_description"
	    android:layout_alignParentRight="true"
	    android:background="@android:color/transparent"
	    android:layout_centerVertical="true"
	    />
</RelativeLayout>
