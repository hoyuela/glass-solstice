<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto/com.discover.mobile.common"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_text"
        style="@style/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/table_inner_padding"
        android:layout_marginLeft="@dimen/forms_inner_padding"
        android:layout_marginRight="@dimen/help_widget_width"
        android:layout_marginTop="@dimen/groups_of_elements_padding"
        android:gravity="left"
        android:paddingRight="@dimen/help_widget_width"
        android:text="@string/activity_title" />

    <RelativeLayout
        android:id="@+id/header_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text" >

        <TextView
            android:id="@+id/lable1"
            style="@style/plain_body_copy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/forms_inner_padding"
            android:text="@string/activity_online_checking" />

        <TextView
            android:id="@+id/value1"
            style="@style/plain_body_copy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lable1"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/lable1"
            android:layout_marginRight="@dimen/forms_inner_padding"
            android:layout_toRightOf="@+id/lable2"
            android:gravity="right" />

        <TextView
            android:id="@+id/lable2"
            style="@style/plain_body_copy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lable1"
            android:layout_marginLeft="@dimen/forms_inner_padding"
            android:text="@string/activity_available_balance" />

        <TextView
            android:id="@+id/value2"
            style="@style/plain_body_copy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lable2"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/lable2"
            android:layout_below="@+id/lable1"
            android:layout_marginRight="@dimen/forms_inner_padding"
            android:layout_toRightOf="@+id/lable2"
            android:gravity="right"
            android:singleLine="true"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/lable3"
            style="@style/plain_body_copy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lable2"
            android:layout_marginLeft="@dimen/forms_inner_padding"
            android:text="@string/activity_current_balance" />

        <TextView
            android:id="@+id/value3"
            style="@style/plain_body_copy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lable3"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/lable3"
            android:layout_below="@+id/lable2"
            android:layout_marginRight="@dimen/forms_inner_padding"
            android:layout_toRightOf="@+id/lable3"
            android:gravity="right"
            android:singleLine="true"
            android:textIsSelectable="false" />
        
        <!-- Interest text label -->
        <TextView 
            android:id="@+id/lable4"
            style="@style/plain_body_copy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lable3"
            android:layout_marginLeft="@dimen/forms_inner_padding"
            android:text="@string/activity_interest_rate"
            />
        
        <!-- Interest value text view -->
        <TextView 
            android:id="@+id/value4"
            style="@style/plain_body_copy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lable4"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/lable4"
            android:layout_below="@+id/lable3"
            android:layout_marginRight="@dimen/forms_inner_padding"
            android:layout_toRightOf="@+id/lable4"
            android:gravity="right"
            android:singleLine="true"
            android:textIsSelectable="false"
            />
    </RelativeLayout>

    <com.discover.mobile.common.ui.table.TableButtonGroup
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_labels"
        android:layout_marginBottom="@dimen/table_inner_padding"
        android:layout_marginTop="@dimen/groups_of_elements_padding"
        custom:resourceArry="@array/account_activity_buttons" />

    <TextView
        android:id="@+id/table_title"
        style="@style/body_copy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttons"
        android:layout_marginLeft="@dimen/forms_inner_padding"
        android:layout_marginRight="@dimen/forms_inner_padding"
        android:text="@string/activity_table_name"
        android:textStyle="bold" />

    <com.discover.mobile.bank.ui.widgets.StatusMessageView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table_title"
        android:layout_marginLeft="@dimen/forms_inner_padding"
        android:layout_marginRight="@dimen/forms_inner_padding" />

    <com.discover.mobile.bank.ui.table.TableTitles
        android:id="@+id/table_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/status"
        android:layout_marginBottom="@dimen/between_related_elements_padding"
        android:layout_marginTop="@dimen/between_related_elements_padding" />

</RelativeLayout>