<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/help"
        style="@style/orange_help_button"
        android:layout_width="@dimen/orange_help_button_size"
        android:layout_height="@dimen/orange_help_button_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/title_text"
        style="@style/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/table_inner_padding"
        android:layout_marginLeft="@dimen/forms_inner_padding"
        android:layout_marginRight="@dimen/forms_inner_padding"
        android:layout_marginTop="@dimen/groups_of_elements_padding"
        android:layout_toLeftOf="@+id/help"
        android:layout_toRightOf="@+id/title_image"
        android:gravity="left"
        android:text="@string/activity_title" />

    <ImageView
        android:id="@+id/title_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/forms_inner_padding"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/drk_blue_arrow_down" />

    <TextView
        android:id="@+id/lable1"
        style="@style/plain_body_copy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_text"
        android:layout_marginLeft="@dimen/forms_inner_padding"
        android:text="@string/activity_online_checking" />

    <TextView
        android:id="@+id/value1"
        style="@style/plain_body_copy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lable1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/lable1"
        android:layout_below="@+id/title_text"
        android:layout_marginRight="@dimen/forms_inner_padding"
        android:layout_toRightOf="@+id/lable2"
        android:gravity="right" />

    <TextView
        android:id="@+id/lable2"
        style="@style/plain_body_copy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lable1"
        android:layout_marginLeft="@dimen/forms_inner_padding"
        android:text="@string/activity_available_balance" />

    <TextView
        android:id="@+id/value2"
        style="@style/plain_body_copy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lable2"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/lable2"
        android:layout_below="@+id/lable1"
        android:layout_marginRight="@dimen/forms_inner_padding"
        android:layout_toRightOf="@+id/lable2"
        android:gravity="right" />

    <TextView
        android:id="@+id/lable3"
        style="@style/plain_body_copy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lable2"
        android:layout_marginLeft="@dimen/forms_inner_padding"
        android:text="@string/activity_current_balance" />

    <TextView
        android:id="@+id/value3"
        style="@style/plain_body_copy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lable3"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/lable3"
        android:layout_below="@+id/lable2"
        android:layout_marginRight="@dimen/forms_inner_padding"
        android:layout_toRightOf="@+id/lable3"
        android:gravity="right" />
    
            <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/table_inner_padding"
            android:layout_marginLeft="@dimen/forms_inner_padding"
            android:layout_marginRight="@dimen/forms_inner_padding"
            android:layout_marginTop="@dimen/groups_of_elements_padding"
            android:orientation="horizontal"
            android:weightSum="2" 
            android:layout_below="@+id/value3">

            <ToggleButton
                android:id="@+id/posted_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/toggle_left_on"
                android:checked="true"
                android:textColor="@color/white"
                android:textOff="@string/activity_posted_button"
                android:textOn="@string/activity_posted_button"
                android:textSize="@dimen/small_copy_min"
                android:textStyle="bold"/>

            <ToggleButton
                android:id="@+id/scheduled_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:background="@drawable/toggle_right_off"
                android:textColor="@color/body_copy"
                android:textOff="@string/activity_scheduled_button"
                android:textOn="@string/activity_scheduled_button"
                android:textSize="@dimen/small_copy_min" 
                android:textStyle="bold"/>
        </LinearLayout>
    
    
    <TextView
        android:id="@+id/table_title"
        style="@style/body_copy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttons"
        android:layout_marginLeft="@dimen/forms_inner_padding"
        android:layout_marginRight="@dimen/forms_inner_padding"
        android:text="@string/activity_table_name"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/sort_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table_title"
        android:layout_marginBottom="@dimen/forms_inner_padding"
        android:layout_marginLeft="@dimen/forms_inner_padding"
        android:layout_marginRight="@dimen/forms_inner_padding"
        android:orientation="horizontal"
        android:weightSum="4" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/date_filter"
                style="@style/sub_copy_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_activity_date"
                android:textStyle="bold"/>

          <ImageView
                android:id="@+id/date_filter_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/date_filter"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/date_filter"
                android:background="@drawable/orange_arrow_down"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/description_filter"
                style="@style/sub_copy_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_activity_description" />

            <ImageView
                android:id="@+id/description_filter_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/description_filter"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/description_filter"
                android:background="@drawable/orange_arrow_down"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
	    	android:gravity="right" >

            <TextView
                android:id="@+id/amount_filter"
                style="@style/sub_copy_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_activity_amount" />

            <ImageView
                android:id="@+id/amount_filter_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/amount_filter"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/amount_filter"
                android:background="@drawable/orange_arrow_down"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
    
    <View
        android:id="@+id/top_line"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/sort_filters"
        android:background="@drawable/table_solid_line" />

</RelativeLayout>