<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/nav_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/between_related_elements_padding"
        android:padding="@dimen/forms_inner_padding"
        android:paddingTop="@dimen/groups_of_elements_padding" >

        <TextView
            android:id="@+id/title"
            style="@style/title_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/groups_of_elements_padding"
            android:layout_marginTop="@dimen/groups_of_elements_padding"
            android:layout_toLeftOf="@+id/previous_button"
            android:text="@string/empty"
            android:textSize="@dimen/title_max" />

        <ImageView
            android:id="@+id/previous_button"
            android:layout_width="@dimen/min_touch_region"
            android:layout_height="@dimen/min_touch_region"
            android:layout_marginTop="@dimen/groups_of_elements_padding"
            android:layout_toLeftOf="@+id/next_button"
            android:background="@drawable/page_control_background"
            android:contentDescription="@string/empty"
            android:padding="@dimen/min_button_padding"
            android:src="@drawable/left_page_control_arrow" />

        <ImageView
            android:id="@+id/next_button"
            android:layout_width="@dimen/min_touch_region"
            android:layout_height="@dimen/min_touch_region"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/forms_inner_padding"
            android:layout_marginRight="@dimen/forms_inner_padding"
            android:layout_marginTop="@dimen/groups_of_elements_padding"
            android:background="@drawable/page_control_background"
            android:contentDescription="@string/empty"
            android:padding="@dimen/min_button_padding"
            android:src="@drawable/right_page_control_arrow" />

        <TextView
            android:id="@+id/joint_account_warning_label"
            style="@style/field_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/previous_button"
            android:layout_marginTop="@dimen/between_related_elements_padding"
            android:text="@string/empty"
            android:visibility="gone" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nav_buttons" />

</RelativeLayout>