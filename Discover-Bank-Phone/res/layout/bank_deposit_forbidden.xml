<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/forms_inner_padding"
    android:background="@drawable/light_gray_bkgrd"  >

    <ImageButton
         android:id="@+id/help"
         style="@style/orange_help_button"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true" />
   
    <TextView
        android:id="@+id/page_title"
        style="@style/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/help"
        android:layout_marginBottom="@dimen/table_inner_padding"
        android:text="@string/bank_deposit_forbidden_title" />

    <TextView
        android:id="@+id/top_note_text"
        style="@style/field_copy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/page_title"
        android:layout_marginBottom="@dimen/groups_of_elements_padding"
        android:text="@string/bank_deposit_forbidden_message" />


    <LinearLayout
        android:id="@+id/footer_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/top_note_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/modal_footer_topmargin"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/between_related_elements_padding" >

        <include
            android:id="@+id/need_help_footer"
            layout="@layout/old_general_need_help_footer" />

    </LinearLayout>

</RelativeLayout>