<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_gray_bkgrd" >

    <fragment 
        android:id="@+id/discover_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/map_navigation_panel"
        android:layout_alignParentTop="true" 
        class="com.google.android.gms.maps.SupportMapFragment"/>

    <LinearLayout
        android:id="@+id/map_navigation_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/forms_inner_padding"
        android:paddingBottom="@dimen/forms_inner_padding"
        android:paddingRight="@dimen/forms_inner_padding"
        android:paddingLeft="@dimen/forms_inner_padding"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:weightSum="2" 
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/list_nav"
       		android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:background="@drawable/atm_list_view_button"
        	android:layout_marginRight="@dimen/between_related_elements_padding"/>
        
        <Button
            android:id="@+id/map_nav"
       		android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:background="@drawable/atm_pinview_button_ds"
        	android:layout_marginLeft="@dimen/between_related_elements_padding"/>     
        
        
    </LinearLayout>
        


</RelativeLayout>