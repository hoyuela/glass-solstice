<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_gray_bkgrd"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/urlSiteList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addUrlButton"
        android:layout_margin="@dimen/groups_of_elements_padding"
        android:clickable="false"
        android:focusable="false" 
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/addUrlButton"
        style="@style/common_call_to_action_theme_orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/groups_of_elements_padding"
        android:text="Add Site" />

</RelativeLayout>