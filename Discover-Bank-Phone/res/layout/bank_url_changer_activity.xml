<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_gray_bkgrd"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_table_corners_shape"
        android:clickable="false"
        android:focusable="false" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/light_gray_bkgrd"
        android:weightSum="2" 
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/forms_inner_padding"
            android:layout_weight="1"
            android:background="@drawable/common_atm_button_selector"
            android:text="@string/bank_url_changer_add"
            android:textColor="@color/title" />

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/forms_inner_padding"
            android:layout_weight="1"
            android:background="@drawable/common_atm_button_selector"
            android:text="@string/bank_url_changer_delete"
            android:textColor="@color/title" />
    </LinearLayout>

</RelativeLayout>