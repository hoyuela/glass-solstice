<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_start_layout"
    style="@style/OrangeTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/image_description"
        android:src="@drawable/discover_splash_logo" />

    <ProgressBar
        android:id="@+id/splash_progress"
        style="@android:style/Widget.ProgressBar.Small.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/splash_progress_toppadding" />

    <ScrollView
        android:id="@+id/login_pane"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/login_bottom_button_row" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <View
                android:id="@+id/padding_element_top"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/groups_of_elements_padding"
                android:visibility="invisible" />

            <!-- White Panel -->

            <RelativeLayout
                android:id="@+id/login_table"
                style="@style/login_white_pane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/padding_element_top" >

                <ImageView
                    android:id="@+id/discoverLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/table_inner_padding"
                    android:contentDescription="@string/discover_copyright_text"
                    android:paddingTop="@dimen/element_top_padding"
                    android:src="@drawable/discover_blk_logo_login" />

                <TextView
                    android:id="@+id/error_text_view"
                    style="@style/error_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/discoverLogo"
                    android:layout_marginTop="@dimen/groups_of_elements_padding"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/element_side_padding"
                    android:paddingRight="@dimen/element_side_padding"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/user_id_label"
                    style="@style/body_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/error_text_view"
                    android:layout_marginTop="@dimen/table_inner_padding"
                    android:paddingLeft="@dimen/element_side_padding"
                    android:paddingRight="@dimen/element_side_padding"
                    android:text="@string/user_id"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <com.discover.mobile.common.ui.widgets.NonEmptyEditText
                    android:id="@+id/username_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_id_label"
                    android:layout_marginLeft="@dimen/element_side_padding"
                    android:layout_marginRight="@dimen/element_side_padding"
                    android:hint="@string/empty"
                    android:imeOptions="actionNext"
                    android:inputType="textNoSuggestions"
                    android:maxLength="16"
                    android:textCursorDrawable="@null" />

                <TextView
                    android:id="@+id/password_label"
                    style="@style/body_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/username_field"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="@dimen/groups_of_elements_padding"
                    android:paddingLeft="@dimen/element_side_padding"
                    android:paddingRight="@dimen/element_side_padding"
                    android:text="@string/password"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <com.discover.mobile.common.ui.widgets.NonEmptyEditText
                    android:id="@+id/password_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password_label"
                    android:layout_marginLeft="@dimen/element_side_padding"
                    android:layout_marginRight="@dimen/element_side_padding"
                    android:hint="@string/empty"
                    android:inputType="textPassword"
                    android:maxLength="32"
                    android:textCursorDrawable="@null" />

                <TextView
                    android:id="@+id/remember_user_id_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password_field"
                    android:layout_marginTop="17dp"
                    android:layout_toLeftOf="@+id/remember_user_id_button"
                    android:text="@string/remember_user_id"
                    android:textColor="#576166" />

                <ImageView
                    android:id="@+id/remember_user_id_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/password_field"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="@dimen/element_side_padding"
                    android:layout_marginTop="14dp"
                    android:clickable="true"
                    android:contentDescription="@string/remember_user_id"
                    android:onClick="toggleCheckBoxFromXml"
                    android:padding="5dip" />

                <!--
                     idk if this is coming back yet...
                     <TextView
                    android:id="@+id/register_text"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="registerNewUser"
                    android:text="@string/register_now"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/light_text_size" />
                -->

                <Button
                    android:id="@+id/login_button"
                    style="@style/call_to_action_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/remember_user_id_button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="@dimen/orange_button_margin_top"
                    android:text="@string/login_button_text" />

                <!-- idk if present on card yet.. AC wasn't clear with comps -->

                <TextView
                    android:id="@+id/forgot_uid_or_pass_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:clickable="true"
                    android:paddingBottom="8dp"
                    android:text="@string/forgot_id_or_pass_text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/blue"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/privacy_and_security_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_button"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:paddingBottom="@dimen/element_top_padding"
                    android:text="@string/privacy_and_terms"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/body_copy_min" />

                <!-- Divider -->

                <View
                    android:id="@+id/login_horizontal_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/privacy_and_security_button"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/login_horizontal_divider" />

                <!-- Card/Bank Login Toggle Layout -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_horizontal_divider"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/bottom_pad"
                    android:paddingLeft="@dimen/left_pad"
                    android:paddingRight="@dimen/right_pad"
                    android:weightSum="2" >

                    <!-- Card -->

                    <RelativeLayout
                        android:id="@+id/card_login_toggle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/card_login_background_off"
                        android:bottom="@dimen/bottom_pad"
                        android:clickable="true"
                        android:onClick="toggleBankCardLogin"
                        android:padding="16dp" >

                        <TextView
                            android:id="@+id/go_to_card_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="8dp"
                            android:singleLine="true"
                            android:text="@string/card"
                            android:textColor="@color/title"
                            android:textSize="@dimen/body_copy_min" />

                        <ImageView
                            android:id="@+id/card_check_mark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dp"
                            android:layout_toLeftOf="@id/go_to_card_label"
                            android:src="@drawable/black_check_mark" />
                    </RelativeLayout>

                    <!-- Bank -->

                    <RelativeLayout
                        android:id="@+id/bank_login_toggle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bank_login_background_off"
                        android:checkable="true"
                        android:checked="true"
                        android:clickable="true"
                        android:onClick="toggleBankCardLogin"
                        android:padding="16dp" >

                        <TextView
                            android:id="@+id/go_to_bank_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="8dp"
                            android:singleLine="true"
                            android:text="@string/bank"
                            android:textColor="@color/title"
                            android:textSize="@dimen/body_copy_min" />

                        <ImageView
                            android:id="@+id/bank_check_mark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dp"
                            android:layout_toLeftOf="@id/go_to_bank_label"
                            android:src="@drawable/black_check_mark" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/padding_element_bottom"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/groups_of_elements_padding"
                android:layout_below="@+id/login_table"
                android:visibility="invisible" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/login_bottom_button_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparentGray"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/customer_service_button"
            style="@style/login_bottom_bar_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/customer_service" />

        <Button
            android:id="@+id/provide_feedback_button"
            style="@style/login_bottom_bar_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/provide_feedback" />

        <Button
            android:id="@+id/register_now_or_atm_button"
            style="@style/login_bottom_bar_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.34"
            android:text="@string/register_now" />
    </LinearLayout>

</RelativeLayout>