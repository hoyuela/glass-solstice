<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/forms_inner_padding" >

    <TextView
        android:id="@+id/top_label"
        style="@style/small_copy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/between_related_elements_padding"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="@string/bank_deposit_amount" />
    
    <LinearLayout
        android:id="@+id/amount_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_label"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dollar_sign"
            style="@style/dollar_sign_style"
            android:layout_gravity="center_vertical" />

        <com.discover.mobile.bank.deposit.BankAmountLimitValidatedField
            android:id="@+id/editable_field"
            style="@style/amount_style"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:id="@+id/error_label"
        style="@style/error_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amount_row"
        android:text="@string/bank_invalid_characters"
        android:visibility="invisible" />
</RelativeLayout>