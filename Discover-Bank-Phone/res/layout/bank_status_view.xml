<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:layout_marginTop="@dimen/forms_inner_padding"
    android:layout_marginBottom="@dimen/forms_inner_padding">
    
    <ImageView
        android:id="@+id/status_image"
        android:contentDescription="@string/bank_status_image_descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/red_x_circle" 
        style="@style/modal_error_image"/>

    <TextView
        android:id="@+id/status_text"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_text"
        android:layout_toRightOf="@+id/status_image"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        style="@style/sub_copy_big" />
</RelativeLayout>