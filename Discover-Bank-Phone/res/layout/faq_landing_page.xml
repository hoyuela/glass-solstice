<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/forms_inner_padding" 
    android:background="@drawable/light_gray_bkgrd">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/title_copy"
        android:text="@string/empty" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:padding="1dp"
        android:layout_marginTop="@dimen/between_related_elements_padding" 
        android:background="@drawable/rounded_table_corners_no_padding"
        >
    </ListView>

</RelativeLayout>
