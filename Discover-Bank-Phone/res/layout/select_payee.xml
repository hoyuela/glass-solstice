<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto/com.discover.mobile.bank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/forms_inner_padding"
         >

         <LinearLayout
              android:id="@+id/page_header"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              android:layout_marginBottom="@dimen/table_inner_padding"
              android:layout_marginRight="@dimen/forms_inner_padding"
              android:layout_marginTop="@dimen/groups_of_elements_padding"
              android:paddingLeft="@dimen/forms_inner_padding">
             
              <com.discover.mobile.bank.ui.widgets.StatusMessageView
	            android:id="@+id/status"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/forms_inner_padding"
	            android:layout_marginBottom="@dimen/forms_inner_padding"/>
              
              <TextView
	            android:id="@+id/select_payee_title"
	            style="@style/page_title"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/select_payee_title" />                 
         </LinearLayout>
           
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/page_header"
            android:orientation="vertical" 
            >
            
            <TextView
            android:id="@+id/payee_error_text"
            style="@style/error_static_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/schedule_pay_canceled"
            android:paddingBottom="@dimen/between_related_elements_padding"
            android:paddingLeft="@dimen/forms_inner_padding"
            android:visibility="gone" />

            <TextView
                android:id="@+id/no_payees"
                style="@style/normal_static_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_payee_empty"
                android:paddingRight="@dimen/forms_inner_padding"
                android:visibility="gone" 
                android:paddingLeft="@dimen/forms_inner_padding"/>

            <LinearLayout
                android:id="@+id/payee_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                
                 />
        </LinearLayout>

        <Button
            android:id="@+id/add_payee"
            style="@style/common_call_to_action_theme_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/orange_button_margin_top"
            android:layout_below="@+id/content"
            android:layout_centerHorizontal="true"
            android:text="@string/select_payee_add" />
        
        <com.discover.mobile.bank.ui.widgets.BankLayoutFooter
            android:id="@+id/bank_footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_payee" 
            style="@style/bank_layout_footer_style"
            custom:provideFeedbackUrl="@string/bank_bill_pay_feedback_url"/>
    </RelativeLayout>
</ScrollView>
