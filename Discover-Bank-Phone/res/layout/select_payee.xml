<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_gray_bkgrd"
        android:paddingBottom="@dimen/forms_inner_padding"
        android:paddingLeft="@dimen/forms_inner_padding" >

        <ImageButton
            android:id="@+id/help"
            style="@style/orange_help_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />
        
        <TextView
            android:id="@+id/select_payee_title"
            style="@style/page_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/table_inner_padding"
            android:layout_marginRight="@dimen/forms_inner_padding"
            android:layout_marginTop="@dimen/groups_of_elements_padding"
            android:layout_toLeftOf="@+id/help"
            android:text="@string/select_payee_title" />        

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_payee_title"
            android:orientation="vertical" >
            
            <TextView
            android:id="@+id/payee_error_text"
            style="@style/error_static_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_payee_title"
            android:text="@string/schedule_pay_canceled"
            android:paddingBottom="@dimen/between_related_elements_padding"
            android:visibility="gone" />

            <TextView
                android:id="@+id/no_payees"
                style="@style/normal_static_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_payee_empty"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/payee_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/forms_inner_padding" />
        </LinearLayout>

        <Button
            android:id="@+id/add_payee"
            style="@style/call_to_action_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/orange_button_margin_top"
            android:layout_below="@+id/content"
            android:layout_centerHorizontal="true"
            android:text="@string/select_payee_add" />

    </RelativeLayout>

</ScrollView>