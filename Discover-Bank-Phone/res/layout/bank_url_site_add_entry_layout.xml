<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_gray_bkgrd" >

    <TextView
        android:id="@+id/title"
        style="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/groups_of_elements_padding"
        android:paddingBottom="@dimen/between_related_elements_padding"
        android:paddingRight="15dp"
        android:text="@string/bank_url_changer_title"
        android:textColor="@color/title"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/name"
        style="@style/common_edittext_grey_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/title"
        android:hint="@string/bank_url_changer_title_hint"
        android:paddingLeft="10dp"
        android:textColor="@color/title"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/url_label"
        style="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:paddingBottom="@dimen/between_related_elements_padding"
        android:paddingRight="15dp"
        android:text="@string/bank_url_changer_url"
        android:textColor="@color/title"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/url"
        style="@style/common_edittext_grey_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/url_label"
        android:layout_alignLeft="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/url_label"
        android:hint="@string/bank_url_changer_url_hint"
        android:paddingLeft="10dp"
        android:textColor="@color/title"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/light_gray_bkgrd"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/forms_inner_padding"
            android:layout_weight="1"
            android:background="@drawable/common_atm_button_selector"
            android:onClick="close"
            android:text="@string/bank_url_changer_cancel"
            android:textColor="@color/title" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/forms_inner_padding"
            android:layout_weight="1"
            android:background="@drawable/common_atm_button_selector"
            android:onClick="addUrl"
            android:text="@string/bank_url_changer_save"
            android:textColor="@color/title" />
    </LinearLayout>

</RelativeLayout>