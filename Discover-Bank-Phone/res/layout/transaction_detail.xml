<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/forms_inner_padding"
        android:paddingTop="@dimen/forms_inner_padding" 
        android:layout_marginTop="@dimen/between_related_elements_padding" >

        <LinearLayout
            android:id="@+id/content_table"
            style="@style/customer_service_table"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/forms_inner_padding" >

                <TextView
                    android:id="@+id/top_label1"
                    style="@style/field_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/amount" />

                <TextView
                    android:id="@+id/amount_cell"
                    style="@style/sub_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/edit" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/table_solid_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/forms_inner_padding" >

                <TextView
                    android:id="@+id/top_label2"
                    style="@style/field_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/description" />

                <TextView
                    android:id="@+id/description_cell"
                    style="@style/sub_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/edit" />

                <TextView
                    android:id="@+id/transaction_id"
                    style="@style/field_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/edit" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/table_solid_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/forms_inner_padding" >

                <TextView
                    android:id="@+id/top_label3"
                    style="@style/field_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/date" />

                <TextView
                    android:id="@+id/date_cell"
                    style="@style/sub_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/edit" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/table_solid_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/forms_inner_padding" >

                <TextView
                    android:id="@+id/top_label4"
                    style="@style/field_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/balance" />

                <TextView
                    android:id="@+id/balance_cell"
                    style="@style/sub_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/edit" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/delete_transfer_button_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_table"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/groups_of_elements_padding"
            android:layout_marginTop="@dimen/groups_of_elements_padding" >

            <Button
                android:id="@+id/delete_one_time_transfer_button"
                style="@style/blue_hyperlink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:text="@string/delete_transfer"
                android:visibility="gone" >
            </Button>

            <Button
                android:id="@+id/delete_recurring_transfer_button"
                style="@style/call_to_action_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/external_link_icon_white"
                android:drawablePadding="@dimen/between_related_elements_padding"
                android:text="@string/see_options"
                android:visibility="gone" >
            </Button>

            <Button
                android:id="@+id/delete_button"
                style="@style/blue_hyperlink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:text="@string/delete_payment"
                android:visibility="gone" />
        </RelativeLayout>

        <com.discover.mobile.bank.ui.widgets.BankLayoutFooter
            android:id="@+id/bank_footer"
            style="@style/bank_layout_footer_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delete_transfer_button_group" />
    </RelativeLayout>

</ScrollView>