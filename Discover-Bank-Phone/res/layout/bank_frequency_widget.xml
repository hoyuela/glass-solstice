<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/forms_inner_padding"
        android:paddingLeft="@dimen/forms_inner_padding" >

        <LinearLayout
            android:id="@+id/page_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/table_inner_padding"
            android:layout_marginRight="@dimen/forms_inner_padding"
            android:layout_marginTop="@dimen/groups_of_elements_padding"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/page_title"
                style="@style/page_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/frequency_title" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/page_header"
            android:orientation="vertical"
            android:paddingRight="@dimen/forms_inner_padding" />

         <com.discover.mobile.bank.ui.widgets.BankLayoutFooter
            android:id="@+id/bank_footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list" 
            style="@style/bank_layout_footer_style"/>
    </RelativeLayout>

</ScrollView>