<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/forms_inner_padding" >

    <View
        android:id="@+id/divider_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/table_solid_line" />

    <LinearLayout
        android:id="@+id/text_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/forms_inner_padding"
        android:layout_marginRight="@dimen/forms_inner_padding"
        android:layout_marginTop="@dimen/forms_inner_padding"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:weightSum="4" >

        <TextView
            android:id="@+id/front_label"
            style="@style/field_copy"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/front" />

        <TextView
            android:id="@+id/retake_front_label"
            style="@style/blue_hyperlink_smallest"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="@string/retake_capital" />

        <TextView
            android:id="@+id/back_label"
            style="@style/field_copy"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/back" />

        <TextView
            android:id="@+id/retake_back_label"
            style="@style/blue_hyperlink_smallest"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="@string/retake_capital" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_image_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_row"
        android:layout_marginLeft="@dimen/forms_inner_padding"
        android:layout_marginRight="@dimen/forms_inner_padding"
        android:layout_marginTop="@dimen/between_related_elements_padding"
        android:orientation="horizontal"
        android:weightSum="2" >

        <ImageView
            android:id="@+id/check_front_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty" />

        <ImageView
            android:id="@+id/check_back_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty" />
    </LinearLayout>

</RelativeLayout>