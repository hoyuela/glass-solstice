<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/OrangeTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/fastcheck_frame_frag"
        android:name="com.discover.mobile.card.fastcheck.FastcheckFragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/fastcheck_bottom_button_row"/> 
            
    <LinearLayout
        android:id="@id/fastcheck_bottom_button_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"  >

        <Button
            android:id="@+id/fastcheck_privacy_terms_button"
            style="@style/fastcheck_bottom_bar_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:text="@string/privacy_and_security" 
            android:gravity="center_vertical|right"/>
        
        <TextView
        	android:id="@+id/divider"
        	style="@style/fastcheck_bottom_bar_divider"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/card_divider"
        	android:layout_weight="0.02"
        	android:gravity="center_vertical|center_horizontal"/>
  
        <Button
            android:id="@+id/fastcheck_provide_feedback_button"
            style="@style/fastcheck_bottom_bar_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:gravity="center_vertical|left"
            android:text="@string/feedback_text" />

    </LinearLayout>

</RelativeLayout>