<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/fitlers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/forms_inner_padding"
        android:layout_marginRight="@dimen/forms_inner_padding"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:weightSum="4" >

        <RelativeLayout
            android:id="@+id/filter_1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/filter_text_1"
                style="@style/sub_copy_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/filter_image_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/filter_text_1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/filter_text_1"
                android:background="@drawable/orange_arrow_down"
                android:visibility="gone"  />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/filter_2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/filter_text_2"
                style="@style/sub_copy_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/filter_image_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/filter_text_2"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/filter_text_2"
                android:background="@drawable/orange_arrow_down"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/filter_3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right" >

            <TextView
                android:id="@+id/filter_text_3"
                style="@style/sub_copy_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/filter_image_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/filter_text_3"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/filter_text_3"
                android:background="@drawable/orange_arrow_down"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
    
    
    <View
        android:id="@+id/top_line"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fitlers"
        android:background="@drawable/table_solid_line" />
    
    <TextView
        android:id="@+id/message"
        style="@style/plain_body_copy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/top_line"
        android:layout_marginLeft="@dimen/forms_inner_padding"
        android:layout_marginRight="@dimen/forms_inner_padding" />
 
</RelativeLayout>