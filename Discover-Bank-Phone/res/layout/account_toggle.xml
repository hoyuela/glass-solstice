<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acct_toggle_triangle"
        android:background="@color/white"
        android:orientation="vertical" >

        <!-- Title & Cancel(X) -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT ACCOUNT" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:src="@drawable/black_check_mark" />
        </RelativeLayout>

        <View
            android:id="@+id/acct_toggle_divider"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="@dimen/forms_inner_padding"
            android:layout_marginRight="@dimen/forms_inner_padding"
            android:background="@drawable/gray_solid_line" />

        <!-- Card -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/acct_toggle_card_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:src="@drawable/black_check_mark" />

            <TextView
                android:id="@+id/acct_toggle_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/acct_toggle_card_check"
                android:text="it Card"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/acct_toggle_card_subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/acct_toggle_card_check"
                android:text="acct ending in 1234" />
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="@dimen/forms_inner_padding"
            android:layout_marginRight="@dimen/forms_inner_padding"
            android:background="@drawable/gray_dash_line" />

        <!-- Bank -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/acct_toggle_bank_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:src="@drawable/black_check_mark" />

            <TextView
                android:id="@+id/acct_toggle_bank_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- Triangle in the widget must be here to be drawn last, on top, in the z-axis -->

    <ImageView
        android:id="@+id/acct_toggle_triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bank_icon_grey" />

</RelativeLayout>