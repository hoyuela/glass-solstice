<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="OrangeTheme">
        <item name="android:background">@drawable/splash_screen</item>
    </style>
    
    <style name="WhiteThemeFooter">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Theme.Splash" parent="android:Theme">
        <item name="android:background">@drawable/splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="login_bottom_bar_button">
        <item name="android:padding">@dimen/content_padding</item>
        <item name="android:textSize">@dimen/small_copy_min</item>
        <item name="android:background">@drawable/login_bottom_bar_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">@dimen/login_bottom_button_height</item>
    </style>
    
    <style name="fastcheck_bottom_bar_button">
        <item name="android:padding">@dimen/content_padding</item>
        <item name="android:textSize">@dimen/small_copy_min</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">@dimen/login_bottom_button_height</item>
         <item name="android:background">#00000000</item>
    </style>

    <style name="simple_white_button">
        <item name="android:textColor">@color/sub_copy</item>
        <item name="android:textSize">@dimen/body_copy_min</item>
        <item name="android:background">@drawable/white_button</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">@dimen/white_button_left_right_padding</item>
        <item name="android:paddingRight">@dimen/white_button_left_right_padding</item>
        <item name="android:layout_marginBottom">@dimen/between_related_elements_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="customer_service_table">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/common_table_background</item>
    </style>
    
    <style name="schedule_pay_list_element">
        <item name="android:paddingTop">@dimen/forms_inner_padding</item>
        <item name="android:paddingBottom">@dimen/forms_inner_padding</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/listview_vertical_height</item>
    </style>
    
    <!--  Includes gradient 3D-like background and padding values used before 13.6 -->
    <style name="schedule_pay_list_element_gradient" parent="schedule_pay_list_element" >
        <item name="android:background">@drawable/home_list_item_no_stroke_padding</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingLeft">@dimen/forms_inner_padding</item>
        <item name="android:paddingRight">@dimen/forms_inner_padding</item>
    </style>
        
    <style name="login_white_pane">
        <item name="android:layout_marginLeft">@dimen/forms_inner_padding</item>
        <item name="android:layout_marginRight">@dimen/forms_inner_padding</item>
        
        <item name="android:background">@drawable/login_white_panel</item> <!-- bkgrnd -->
    </style>
    
    <style name="goto_fastcheck_button_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/title</item>
    </style>
    
    <style name="PasscodeDigit">
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:textSize">17sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:maxLength">1</item>
        <item name="android:digits">0123456789</item>
        <item name="android:keepScreenOn">true</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:imeOptions">actionNone|flagNoExtractUi|flagNoAccessoryAction|flagNoEnterAction</item>
    </style>
</resources>