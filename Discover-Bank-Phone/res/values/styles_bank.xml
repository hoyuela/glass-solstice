<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="page_title">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/title_min</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="page_title_max">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/title_max</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="body_copy_title">
        <item name="android:textColor">@color/body_copy</item>
        <item name="android:textSize">@dimen/body_copy_min</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="body_copy_title_max">
        <item name="android:textColor">@color/body_copy</item>
        <item name="android:textSize">@dimen/body_copy_max</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="body_copy_mid">
        <item name="android:textColor">@color/body_copy</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">@dimen/body_copy_mid</item>
    </style>
    
    <style name="plain_body_copy_title">
        <item name="android:textColor">@color/body_copy</item>
        <item name="android:textSize">@dimen/body_copy_min</item>
    </style>
    
    <style name="normal_static_text">
        <item name="android:textColor">@color/sub_copy</item>
        <item name="android:textSize">@dimen/small_copy_max</item>
    </style>
    
    <style name="light_static_text">
        <item name="android:textColor">@color/field_copy</item>
        <item name="android:textSize">@dimen/small_copy_min</item>
    </style>
    
    <style name="error_static_text">
        <item name="android:textColor">@color/error_indicator</item>
        <item name="android:textSize">@dimen/small_copy_max</item>
    </style>
    
    <style name="table_text">
        <item name="android:textColor">@color/sub_copy</item>
        <item name="android:textSize">@dimen/small_copy_min</item>        
    </style>
    
    <style name="blue_table_text" parent="table_text">
        <item name="android:textColor">@color/blue_link</item>
    </style>
    
    <style name="bank_blue_hyperlink">
        <item name="android:textColor">@color/blue_link</item>
        <item name="android:textSize">@dimen/body_copy_min</item>
    </style>

    <style name="bank_blue_hyperlink_small" parent="bank_blue_hyperlink">
        <item name="android:textSize">@dimen/small_copy_min</item>
    </style>
    
    <style name="blue_choose_item_text">
        <item name="android:textColor">@color/menu_dark_gray</item>
        <item name="android:textSize">@dimen/body_copy_min</item>
    </style>
    
    <style name="filter_static_text">
        <item name="android:textColor">@color/body_copy</item>
        <item name="android:textSize">12dp</item>
    </style>
    
    <style name="dollar_sign_style" parent="field_copy_big">
       <item name="android:layout_width">wrap_content</item>      
       <item name="android:layout_height">wrap_content</item>        
       <item name="android:layout_alignParentLeft">true</item>    
       <item name="android:gravity">center_vertical</item>    
       <item name="android:paddingRight">3dp</item>    
       <item name="android:text">@string/bank_dollar_sign</item>    
       <item name="android:textStyle">bold</item>    
   </style>
   
   <style name="amount_style" parent="field_copy_big">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">@dimen/input_field_height</item>
        <item name="android:layout_toRightOf">@+id/dollar_sign</item>
        <item name="android:layout_below">@+id/top_label</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:ems">8</item>
        <item name="android:focusable">true</item>
        <item name="android:singleLine">true</item>
       <!--  <item name="android:textCursorDrawable">@null</item> -->
        <item name="android:hint">@string/bank_deposit_amount_hint</item>
    </style>
    
   <style name="pmt_amount_style" parent="amount_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/edit_text_default</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">7dp</item>
   </style>
   
   <style name="inline_error_label" parent="discover_text">
        <item name="android:textColor">@color/error_indicator</item>
        <item name="android:visibility">gone</item>     
		<item name="android:textSize">@dimen/small_copy_min</item>
    </style>
    
    <style name="atm_normal_static_title">
        <item name="android:textColor">@color/sub_copy</item>
        <item name="android:textSize">@dimen/small_copy_max</item>
    </style>
    
    <style name="atm_normal_static_text">
        <item name="android:textColor">@color/sub_copy</item>
        <item name="android:textSize">@dimen/small_copy_min</item>
    </style>
    
    <style name="atm_line">
        <item name="android:layout_marginTop">@dimen/forms_inner_padding</item>
        <item name="android:layout_marginBottom">@dimen/forms_inner_padding</item>
    </style>
    
     <!-- Bank Layout Footer Widget Style -->
    <style name="bank_layout_footer_style">
         <item name="android:gravity">center_horizontal|bottom</item>  
    	 <item name="android:paddingBottom">@dimen/between_related_elements_padding</item>
    	 <item name="android:layout_centerHorizontal">true</item>
    	 <item name="android:layout_alignParentBottom">true</item>
    </style>
</resources>
