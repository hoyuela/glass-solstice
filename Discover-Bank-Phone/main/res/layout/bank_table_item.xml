<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
	<LinearLayout
	    android:id="@+id/content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentLeft="true"
	    android:paddingRight="@dimen/between_related_elements_padding"
	    android:paddingLeft="@dimen/between_related_elements_padding"
	    android:paddingTop="@dimen/table_inner_padding"
	    android:paddingBottom="@dimen/table_inner_padding"
	    android:weightSum="4">
    
	    <TextView 
	        android:id="@+id/date"
	    	android:layout_width="0dip"
	    	android:layout_height="wrap_content"
        	android:textColor="@color/blue_link"
        	android:textSize = "@dimen/small_copy_min"
            android:paddingRight="@dimen/between_related_elements_padding"
	    	android:layout_weight="1"/>

	    <TextView 
	        android:id="@+id/description"
	    	android:layout_width="0dip"
	    	android:layout_height="wrap_content"
            style="@style/sub_copy_small"
            android:paddingRight="@dimen/between_related_elements_padding"
	    	android:layout_weight="2"/>

	    <TextView 
	        android:id="@+id/amount"
	    	android:layout_width="0dip"
	    	android:layout_height="wrap_content"
            style="@style/sub_copy_small"
	    	android:layout_weight="1"/>
    
    </LinearLayout>
    
	<View
	    android:id="@+id/dotted_line"
   		android:layout_width="wrap_content"
    	android:layout_height="1dp"
	    android:background="@drawable/table_dotted_line"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/content"/> 

</RelativeLayout>