<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/forms_inner_padding" 
        android:paddingBottom="@dimen/forms_inner_padding"
        android:background="@drawable/light_gray_bkgrd">

        <ImageButton
            android:id="@+id/help"
            style="@style/orange_help_button"
            android:layout_width="@dimen/orange_help_button_size"
            android:layout_height="@dimen/orange_help_button_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/select_payee_title"
            style="@style/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/table_inner_padding"
            android:layout_marginRight="@dimen/forms_inner_padding"
            android:layout_marginTop="@dimen/groups_of_elements_padding"
            android:layout_toLeftOf="@+id/help"
            android:layout_alignParentLeft="true"
            android:text="@string/select_payee_title"/>
        
        <TextView
            android:id="@+id/no_payees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_payee_title"
            android:text="@string/select_payee_empty"
            style="@style/normal_static_text"
            android:visibility="gone"/>
        
        <LinearLayout
            android:id="@+id/payee_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/select_payee_title"
        	android:paddingRight="@dimen/forms_inner_padding" />
        
        <Button 
            android:id="@+id/add_payee"
            style="@style/call_to_action_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payee_list"
            android:layout_marginTop="@dimen/orange_button_margin_top"
            android:layout_centerHorizontal="true"
            android:text="@string/select_payee_add_new"/>
        
        <TextView
            android:id="@+id/provide_feedback_button"
            style="@style/bank_blue_hyperlink_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/orange_button_margin_top"
            android:layout_marginBottom="@dimen/orange_button_margin_top"
            android:layout_below="@+id/payee_list"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="@string/feedback_text" />
        
    </RelativeLayout>
    

</ScrollView>