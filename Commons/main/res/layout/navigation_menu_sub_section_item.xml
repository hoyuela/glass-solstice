<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_section_height"
    android:background="@color/menu_light_gray"
    android:orientation="horizontal" >

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/nav_section_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/nav_sub_section_pading"
        android:text="@string/app_name" />

    <ImageView
        android:id="@+id/external"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/nav_section_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/nav_image_padding"
        android:src="@drawable/external_link_icon" />

</LinearLayout>