<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/light_gray_bkgrd">
    
    <TextView 
        android:id="@+id/table_title"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="Posted Transactions"
    	style="@style/title_copy"/>
    
    <LinearLayout
        android:id="@+id/sort_filters"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    android:weightSum="4"> 
	    
        <TextView
            android:id="@+id/date_filter"
           	android:layout_width="0dip"
	    	android:layout_height="match_parent"
	    	android:layout_weight="1"
	    	android:text="Date"
	    	style="@style/sub_copy_small"/>
        
        <TextView
            android:id="@+id/description_filter"
           	android:layout_width="0dip"
	    	android:layout_height="match_parent"
	    	android:layout_weight="2"
	    	android:text="Description"
	    	style="@style/sub_copy_small"/>
        
        <TextView
            android:id="@+id/amount_filter"
           	android:layout_width="0dip"
	    	android:layout_height="match_parent"
	    	android:layout_weight="1"
	    	android:text="Amount"
	    	style="@style/sub_copy_small"/>
            
   </LinearLayout>
   
    <LinearLayout 
        android:id="@+id/transactions"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" />
    

</LinearLayout>