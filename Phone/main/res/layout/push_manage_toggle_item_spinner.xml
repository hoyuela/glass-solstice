<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notifcation_alert_toggle" 
    android:background="@color/white"
    android:padding="14dip">
    
    
    <ImageView
        android:id="@+id/text_toggle_view"
        android:layout_width="@dimen/push_toggle_box_width"
        android:layout_height="@dimen/push_toggle_box_height"
        style="@style/push_toggle_box_default"/> 
    
    <TextView
        android:id="@+id/text_enable_text"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/text_toggle_view"
    	android:text="@string/text"
    	style="@style/push_toggle_box_text_style"
    	android:layout_marginLeft="@dimen/first_toggle_text_margin_left"/>
    
    <ImageView
        android:id="@+id/push_toggle_view"
        android:layout_width="@dimen/push_toggle_box_width"
        android:layout_height="@dimen/push_toggle_box_height"
        android:layout_toRightOf="@+id/text_toggle_view"
        android:layout_alignTop="@+id/text_toggle_view"
        style="@style/push_toggle_box_default"
        android:layout_marginLeft="@dimen/second_toggle_margin_left"/>
    
    <TextView
        android:id="@+id/push_enable_text"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@+id/text_enable_text"
    	android:layout_below="@+id/text_toggle_view"
    	android:text="@string/push_alerts"
    	style="@style/push_toggle_box_text_style"
    	android:layout_marginLeft="@dimen/second_toggle_text_margin_left"/>

	<TextView
	    android:id="@+id/header" 
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
		style="@style/push_header_text_style"
		android:layout_toRightOf="@+id/push_enable_text"
		android:layout_alignTop="@+id/text_toggle_view"
		android:layout_marginLeft="@dimen/push_header_margin_left"/>
	
	<TextView
	    android:id="@+id/sub_header"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignLeft="@+id/header"
    	android:layout_below="@+id/header"
    	style="@style/push_toggle_item_secondary_text"/>
	
	<Spinner
	    android:id="@+id/amount_spinner"
	    android:layout_width="@dimen/push_spinner_width"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/sub_header"
	    android:layout_below="@+id/sub_header" />
	
	<TextView
	    android:id="@+id/amount_spinner_text"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@+id/amount_spinner"
    	android:layout_alignTop="@+id/amount_spinner"
    	android:layout_alignBottom="@+id/amount_spinner"
    	android:gravity="center_vertical"
    	style="@style/push_toggle_item_secondary_text"
    	android:text="@string/of_your_credit_line"/>
	
</RelativeLayout>