<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_gray_bkgrd">
    
    <ScrollView 
        android:id="@+id/scroll_view"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:layout_above="@+id/save_view"
    	android:layout_alignParentTop="true">
    
	    <RelativeLayout 
	        android:layout_width="match_parent"
	   		android:layout_height="wrap_content" 
	   		android:padding="@dimen/forms_inner_padding">
	    
		<TextView 
		    android:id="@+id/sent_to_number"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/title"
		    android:textSize="14sp"
		    android:text="@string/messages_sent_to"/>
		
		<TextView 
		    android:id="@+id/phone_number"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/title"
		    android:text="312-953-3488"
		    android:textStyle="bold"
		    android:textSize="16sp"
		    android:layout_below="@id/sent_to_number"/>
		
		<TextView
		    android:id="@+id/change_notifications"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/blue_link"
		    android:text="@string/notification_change"
		    android:textStyle="bold"
		    android:textSize="14sp"
		    android:layout_below="@id/sent_to_number"
		    android:layout_alignParentRight="true"/>
		
		<TextView
		    android:id="@+id/not_registered_warning_image"
		    android:layout_width="17dp"
		    android:layout_marginTop="25dp"
		    android:layout_marginRight="7dp"
		    android:layout_height="wrap_content"
		    android:textColor="@color/white"
		    android:text="!"
		    android:textSize="14sp"
		    android:background="@drawable/yellow_oval"
		    android:textStyle="bold"
		    android:gravity="center"
		    android:layout_below="@+id/phone_number"
		    android:visibility="gone"/>
		
		<TextView
		    android:id="@+id/not_registered_warning_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/title"
		    android:text="@string/mobile_device_not_verified" 
		    android:textSize="14sp"
		    android:layout_marginTop="20dp"
		    android:layout_below="@+id/phone_number"
		    android:layout_toRightOf="@+id/not_registered_warning_image"
		    android:visibility="gone"/>
	
		<TextView
		    android:id="@+id/enable_texts"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="@dimen/groups_of_elements_padding"
		    android:layout_marginLeft="@dimen/groups_of_elements_padding"
		    android:layout_marginTop="@dimen/groups_of_elements_padding"
		    android:layout_below="@+id/not_registered_warning_text"
		    android:text="@string/enable_texts"
		    android:textColor="@color/body_copy"
		    android:textSize="14sp" />
	
		<TextView
		    android:id="@+id/enable_push"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/enable_push_alerts"
		    android:layout_marginTop="@dimen/groups_of_elements_padding"
		    android:layout_below="@+id/not_registered_warning_text"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="@dimen/groups_of_elements_padding"
		    android:layout_marginLeft="@dimen/groups_of_elements_padding"
		    android:textColor="@color/body_copy"
		    android:textSize="14sp" />
	
		<ImageView
		    android:id="@+id/toggle_enable_texts"
		    android:layout_width="75dp"
		    android:layout_height="25dp"
		    android:layout_marginLeft="6dp"
		    android:layout_marginRight="50dp"
		    android:layout_alignLeft="@+id/enable_texts"
		    android:layout_below="@+id/enable_texts"
		    android:background="@drawable/swipe_off"
		    android:textColor="@color/title" />
	
	    <ImageView
	        android:id="@+id/toggle_enable_push"
	        android:layout_width="75dp"
	        android:layout_height="25dp"
	        android:layout_alignLeft="@+id/enable_push"
	        android:layout_below="@+id/enable_push"
	        android:layout_marginLeft="12dp"
	        android:background="@drawable/swipe_off"
	        android:textColor="@color/title" />
		
		<com.discover.mobile.push.PushManageHeaderItem
		    android:id="@+id/manage_you_account_header"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/toggle_enable_push"
		    android:padding="@dimen/forms_inner_padding"
		    android:background="@drawable/notification_list_item"
		    android:layout_marginTop="20dp"/>
		
		<LinearLayout
		    android:id="@+id/manage_account_list_preferences"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/manage_you_account_header"
		    android:background="@drawable/notification_list_item"
		    android:orientation="vertical"/>
		
		<com.discover.mobile.push.PushManageHeaderItem
		    android:id="@+id/monitor_spending_list_header"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/manage_account_list_preferences"
		    android:padding="@dimen/forms_inner_padding"
		    android:background="@drawable/notification_list_item"
		    android:layout_marginTop="20dp"/>
		
		<LinearLayout
		    android:id="@+id/monitor_spending_list_preferences"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/monitor_spending_list_header"
		    android:background="@drawable/notification_list_item"
		    android:orientation="vertical"/>
		
		<com.discover.mobile.push.PushManageHeaderItem
		    android:id="@+id/maximize_rewards_list_header"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/monitor_spending_list_preferences"
		    android:padding="@dimen/forms_inner_padding"
		    android:background="@drawable/notification_list_item"
		    android:layout_marginTop="20dp"/>
		
		<LinearLayout
		    android:id="@+id/maximize_rewards_list_preferences"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/maximize_rewards_list_header"
		    android:background="@drawable/notification_list_item"
		    android:orientation="vertical"/>

		</RelativeLayout>
	</ScrollView>
	
    <com.discover.mobile.push.PushManageSaveView
        android:id="@+id/save_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        android:padding="7dp"/>

</RelativeLayout>
