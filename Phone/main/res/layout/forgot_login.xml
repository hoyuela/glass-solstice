<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/WhiteTheme" >

    <TextView
        android:id="@+id/forgot_credentials_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_credentials_text"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="@color/black"
        android:textStyle="bold"/>
    
    <ListView
        android:id="@android:id/list"
        android:background="@drawable/rounded_table_corners_no_padding"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_credentials_label"
        android:layout_centerHorizontal="true" 
        android:cacheColorHint="#00000000">
    </ListView>
        
    <include layout="@layout/need_help_footer"/>

    <include layout="@layout/copyright_footer"/>

</RelativeLayout>
