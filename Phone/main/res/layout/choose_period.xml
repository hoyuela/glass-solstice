<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/light_gray_bkgrd">
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    style="@drawable/light_gray_bkgrd">
	    
		
	    <TextView 
	        android:id="@+id/title"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="@drawable/notification_list_item"
	    	android:text="Choose Activity Period"
	    	style="@style/title_copy"/>
	    
	    <LinearLayout 
	        android:id="@+id/dates"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"
	        android:layout_marginBottom="@dimen/between_related_elements_padding"
	        android:background="@drawable/notification_list_item"/>

	</LinearLayout>
</ScrollView>