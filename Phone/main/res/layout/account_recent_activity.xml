<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <TextView
        android:id="@+id/view_transactions_label"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="View Transactions by Activity Period."/>
    
    <TextView
        android:id="@+id/view_transactions"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="Recent Actiivty Since XX/XX/XX"/>
    
    <TextView
        android:id="@+id/search_transactions"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="Search Transactions"/>
        
    

</LinearLayout>