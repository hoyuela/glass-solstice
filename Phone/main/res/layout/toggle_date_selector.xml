<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ToggleButton
        android:id="@+id/toggle_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selector_toggle_left"
        android:checked="true"
        android:textOff="@string/toggle_all"
        android:textOn="@string/toggle_all"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <ToggleButton
        android:id="@+id/toggle_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selector_toggle_mid"
        android:checked="false"
        android:textOff="@string/toggle_specific"
        android:textOn="@string/toggle_specific"
        android:textColor="@color/field_copy"
        android:textSize="14sp" />

    <ToggleButton
        android:id="@+id/toggle_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selector_toggle_right"
        android:checked="false"
        android:textOff="@string/toggle_range"
        android:textOn="@string/toggle_range"
        android:textColor="@color/field_copy"
        android:textSize="14sp" />

</RadioGroup>