<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_gray_bkgrd"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingTop="7dp" >

        <!-- Keyword Section -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/title_keywords"
                style="@style/title_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:paddingRight="7dp"
                android:text="@string/title_keywords" />

            <TextView
                android:id="@+id/title_keywords_sub"
                style="@style/body_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/title_keywords"
                android:paddingBottom="7dp"
                android:text="@string/subtitle_keywords"
                android:textColor="@color/sub_copy" />
        </RelativeLayout>

        <EditText
            android:id="@+id/input_keywords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_default"
            android:inputType="text"
            android:text="" />

        <!-- Date Section -->

        <TextView
            android:id="@+id/title_date"
            style="@style/title_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="20dp"
            android:text="@string/title_date" />

        <TextView
            android:id="@+id/title_date_sub"
            style="@style/body_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:text="@string/subtitle_date"
            android:textColor="@color/sub_copy" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <include
                android:id="@+id/transaction_date_selector"
                layout="@layout/toggle_range_selector" />

            <TextView
                android:id="@+id/temp_cal_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/transaction_date_selector"
                android:background="#FFFFFF"
                android:text="hello left" />

            <TextView
                android:id="@+id/temp_cal_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/transaction_date_selector"
                android:background="#FFFFFF"
                android:text="hello right" />
        </RelativeLayout>

        <!-- Amount Section -->

        <TextView
            android:id="@+id/title_amount"
            style="@style/title_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:paddingTop="20dp"
            android:text="@string/title_amount" />

        <include
            android:id="@+id/transaction_amount_selector"
            layout="@layout/toggle_range_selector" />
    </LinearLayout>

</ScrollView>