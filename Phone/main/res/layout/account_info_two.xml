<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/gradient_bg" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/account_info_register_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/register_text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/account_info_step_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/account_info_register_label"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/account_info_register_label"
                android:paddingTop="8dp"
                android:text="@string/account_informaiton_step_lablel_two"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/orange"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/account_info_label_one_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/account_info_step_label"
                android:layout_below="@+id/account_info_step_label"
                android:paddingTop="4dp"
                android:text="@string/account_info_two_create_id_text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/account_information_input_info_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/account_info_label_one_label"
                android:layout_below="@+id/account_info_label_one_label"
                android:paddingTop="4dp"
                android:text="@string/account_info_two_id_detail_info_text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textSize="@dimen/LIGHT_TEXT_SIZE" />

            <EditText
                android:id="@+id/account_info_two_id_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/account_information_input_info_label"
                android:layout_below="@+id/account_information_input_info_label"
                android:ems="16"
                android:imeOptions="actionNext"
                android:maxLength="16"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/account_info_two_pass_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_info_two_id_field"
                android:text="@string/account_info_two_pass_text"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/account_info_two_pass_info_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_info_two_pass_label"
                android:text="@string/account_info_two_pass_info_text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textSize="@dimen/LIGHT_TEXT_SIZE" />

            <EditText
                android:id="@+id/account_info_two_pass_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/account_information_input_info_label"
                android:layout_below="@+id/account_info_two_pass_info_label"
                android:ems="32"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="32"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/account_info_two_pass_confirm_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_info_two_pass_field"
                android:layout_marginTop="8dp"
                android:text="@string/account_info_two_pass_confirm_text"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/account_info_two_pass_confirm_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/account_info_two_pass_confirm_label"
                android:layout_below="@+id/account_info_two_pass_confirm_label"
                android:ems="32"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="32"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/account_info_two_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_info_two_pass_confirm_field"
                android:layout_marginTop="8dp"
                android:text="@string/account_info_two_email_text"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/account_info_two_email_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_info_two_email_label"
                android:imeOptions="actionDone"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/feedback_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="64dp"
                android:layout_below="@+id/account_info_two_submit_button"
                android:text="@string/feedback_text"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/discover_copyright_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedback_label"
                android:layout_centerHorizontal="true"
                android:text="@string/discover_copyright_text"
                android:textSize="@dimen/LIGHT_TEXT_SIZE" />

            <TextView
                android:id="@+id/account_info_two_cancel_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/account_info_two_email_label"
                android:layout_below="@id/account_info_two_email_field"
                android:layout_marginTop="24dp"
                android:text="@string/cancel_text"
                android:textColor="@color/blue" />

            <Button
                android:id="@+id/account_info_two_submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/account_info_step_label"
                android:layout_below="@+id/account_info_two_email_field"
                android:text="@string/submit_text" 
                android:layout_marginTop="8dp"/>
        </RelativeLayout>

    </ScrollView>
