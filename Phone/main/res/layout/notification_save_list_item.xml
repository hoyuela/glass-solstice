<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@color/white">
    
    <Button
        android:id="@+id/notificaiton_save_button"
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
		android:text="@string/save_changes"
		android:textColor="@color/white"
		android:paddingLeft="30px"
		android:paddingRight="30px"
   		android:background="@drawable/orange_gradient_square_button"
   		/>
    
    <TextView
        android:id="@+id/terms_of_use_view"
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:text="@string/terms_text"
   		android:maxLines="2"
   		android:textColor="@color/field_stroke"
   		android:gravity="center_vertical"
   		android:layout_alignParentTop="true"
   		android:layout_toRightOf="@+id/notificaiton_save_button"
   		android:layout_alignBottom="@+id/notificaiton_save_button"/>

</RelativeLayout>