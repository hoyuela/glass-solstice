<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    style="@style/WhiteTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <TextView
            android:id="@+id/account_security_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_security_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/error_message_strong_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/account_security_label"
            android:layout_below="@+id/account_security_label"
            android:paddingTop="4dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="@dimen/light_text_size" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/account_security_info_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/account_security_label"
            android:layout_below="@+id/account_security_label"
            android:paddingTop="4dp"
            android:text="@string/account_security_info_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="@dimen/light_text_size" />

        <TextView
            android:id="@+id/account_security_question_placeholder_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_security_info_label"
            android:layout_marginTop="16dp"
            android:text="@string/account_security_placeholder_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/account_security_question_answer_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_security_question_placeholder_label"
            android:hint="@string/account_security_question_hint"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions"
            android:maxLines="@integer/MAX_INPUT_LINES" />

        <TextView
            android:id="@+id/account_security_remember_device_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_security_question_answer_field"
            android:layout_marginTop="16dp"
            android:text="@string/account_security_remember_device_text"
            android:textColor="@color/black" />

        <RelativeLayout
            android:id="@+id/account_security_whats_this_relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_security_remember_device_label"
            android:onClick="expandHelpMenu" >

            <View
                android:id="@+id/account_security_separator_line_one"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/account_security_whats_this_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_security_separator_line_one"
                android:text="@string/account_security_whats_this_text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/account_security_plus_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/account_security_whats_this_label"
                android:layout_alignParentRight="true"
                android:text="@string/account_security_plus_text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <View
                android:id="@+id/account_security_separator_line_two"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/account_security_whats_this_detail_label"
                android:layout_marginTop="4dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/account_security_whats_this_detail_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_security_whats_this_label"
                android:maxLines="@integer/ZERO"
                android:text="@string/account_security_whats_this_detail_text"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/account_security_choice_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_security_whats_this_relative_layout"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_table_corners_shape" >

            <RadioButton
                android:id="@+id/account_security_choice_one_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/account_security_remember_me_text"
                android:button="@drawable/custom_radio_check"
                android:textColor="@color/black"
                android:textStyle="bold"  />

            <View
                android:id="@+id/account_security_choices_separator"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/darker_gray" />

            <RadioButton
                android:id="@+id/account_security_choice_two_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:button="@drawable/custom_radio_check"
                android:text="@string/account_security_dont_remember_me_text"
                android:textColor="@color/abs__primary_text_disable_only_holo_dark"
                android:textStyle="bold" />
        </RadioGroup>

        <Button
            android:id="@+id/account_security_continue_button"
            style="@style/call_to_action_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_security_choice_radio_group"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/modal_orange_margin_bottom"
            android:layout_marginTop="@dimen/modal_orange_margin_top"
            android:onClick="submitSecurityInfo"
            android:text="@string/continue_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/account_security_continue_button" >

            <include layout="@layout/old_general_copyright_footer" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>