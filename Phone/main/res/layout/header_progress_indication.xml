<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:id="@+id/location_text"
        style="@style/status_indicator_style" >

        <ImageView
            android:id="@+id/step1_confirm"
            android:layout_alignParentLeft="true"
            style="@style/status_check_mark" />

        <LinearLayout
            android:id="@+id/step_1"
            android:layout_toRightOf="@+id/step1_confirm"
            style="@style/status_linear_layouts" >

            <ImageView
                android:id="@+id/first_indicator"
                style="@style/status_indicator_image" />

            <TextView
                android:id="@+id/step1_title"
                android:text="@string/enter_info" 
                style="@style/status_indicator_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/step_2"
            style="@style/status_linear_layouts" 
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" >

            <ImageView
                android:id="@+id/middle_indicator"
                style="@style/status_indicator_image"  />

            <TextView
                android:id="@+id/step2_title"
                style="@style/status_indicator_text"
                android:text="@string/create_password" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/step_3"
            style="@style/status_linear_layouts" 
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingRight="5dp" >

            <ImageView
                android:id="@+id/last_indicator"
                style="@style/status_indicator_image" />

            <TextView
                android:id="@+id/step3_title"
                style="@style/status_indicator_text"
                android:text="@string/confirm" />
        </LinearLayout>

        <ImageView
            android:id="@+id/step2_confirm"
            android:layout_toLeftOf="@+id/step_2"
            style="@style/status_check_mark" />
    </RelativeLayout>

</merge>