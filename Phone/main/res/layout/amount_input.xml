<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/amount_input_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/small_copy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <FrameLayout
        android:id="@+id/amount_field_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/amount_input_title"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/amount_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_default" />

        <TextView
            android:id="@+id/date_input_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="7dp"
            android:text="@string/dollar_sign" />
    </FrameLayout>

    <TextView
        android:id="@+id/date_input_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/amount_field_layout"
        android:textSize="10sp"
        android:text="@string/chooser_amount_subtitle" />

</RelativeLayout>