<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- Theme.Sherlock.Light.DarkActionBar -->
    <style name="AppBaseTheme" parent="Theme.Sherlock">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->        
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppTheme.NoTitleBar" parent="Theme.Sherlock.NoActionBar">
    </style>
    
    <style name="OrangeTheme">
        <item name="android:background">@drawable/login_bkgd</item>
    </style>

    <style name="WhiteTheme">
        <item name="android:background">@drawable/light_gray_bkgrd</item>
        <item name="android:paddingBottom">@dimen/content_padding</item>
        <item name="android:paddingLeft">@dimen/content_padding</item>
        <item name="android:paddingRight">@dimen/content_padding</item>
        <item name="android:paddingTop">@dimen/content_padding</item>
    </style>
    
    <style name="WhiteThemeFooter">
        <item name="android:textColor">@color/blue</item>
    </style>
    
    <style name="Theme.Splash" parent="android:Theme">
        <item name="android:background">@drawable/splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="call_to_action_theme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/body_copy_max</item>
        <item name="android:paddingLeft">@dimen/orange_button_left_right_padding</item>
        <item name="android:paddingRight">@dimen/orange_button_left_right_padding</item>
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:paddingTop">@dimen/call_to_actions_padding</item>
        <item name="android:paddingBottom">@dimen/call_to_actions_padding</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>

    </style>
    
    <style name="blue_hyperlink">
        <item name="android:textColor">@color/blue_link</item>
        <item name="android:textSize">@dimen/body_copy_max</item>
        <item name="android:textStyle">bold</item>

    </style>
    
    <style name="login_bottom_bar_button">
        <item name="android:padding">@dimen/content_padding</item>
        <item name="android:textSize">@dimen/small_copy_min</item>
        <item name="android:background">@drawable/login_bottom_bar_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">@dimen/login_bottom_button_height</item>
    </style>  
    
    <!--  FROM STYLE GUIDE 
    
    All typography for Android to be set in Roboto Bold and Roboto Regular. 
    Leading/Line-Height is defined for each type size to the right. 
    Tracking/Letter-Spacing will be defined at the default 0.

	The secondary smallest font sizes used sparsely are 28px and 24px for legal lines, sub-copy, and header links.
	

	The font sizes specified are for .PSD purposes and will be converted on-screen to 1/2 the specified font size.
	For instance, 50px in Photoshop will appear as 25px on Android.
    -->
    
    <style name="discover_text">
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="title_copy" parent="discover_text">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
	    <item name="android:textColor">#293033</item>
	    <item name="android:textStyle">bold</item>	
    </style>
    
    <!--   5. BODY COPY / #3d484d / 34px font-size / 42px line-height / regular -->
    <style name="body_copy"  parent="discover_text">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	    <item name="android:textColor">#3d484d</item>
	    <item name="android:typeface">normal</item>
	</style>
    
    <style name="small_copy"  parent="discover_text">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	  	<item name="android:textColor">#576166</item>
	  	
    </style>
    
    <style name="sub_copy"  parent="discover_text">
        <item name="android:textSize">24sp</item>
	  	<item name="android:textColor">#576166</item>
	 
    </style>
    
    <style name="field_copy"  parent="discover_text">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	  	<item name="android:textColor">#8a9499</item>  
    </style>
   
    <style name="field_stroke"  parent="discover_text">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	  	<item name="android:textColor">#dce3e5</item>	   
    </style>
    
    <style name="error_label" parent="discover_text">
       
	    <item name="android:textColor">#ed1c24</item>
        <item name="android:visibility">gone</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>        
    </style>
        
</resources>