<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- Theme.Sherlock.Light.DarkActionBar -->
    <style name="AppBaseTheme" parent="Theme.Sherlock">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->        
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppTheme.NoTitleBar" parent="Theme.Sherlock.NoActionBar">
    </style>
    
    <style name="OrangeTheme">
        <item name="android:background">@drawable/login_bkgd</item>
    </style>

    <style name="WhiteTheme">
        <item name="android:background">@drawable/light_gray_bkgrd</item>
        <item name="android:paddingBottom">@dimen/content_padding</item>
        <item name="android:paddingLeft">@dimen/content_padding</item>
        <item name="android:paddingRight">@dimen/content_padding</item>
        <item name="android:paddingTop">@dimen/content_padding</item>
    </style>
    
    <style name="WhiteThemeFooter">
        <item name="android:textColor">@color/blue</item>
    </style>
    
    <style name="Theme.Splash" parent="android:Theme">
        <item name="android:background">@drawable/splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="call_to_action_theme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/body_copy_max</item>
        <item name="android:paddingLeft">@dimen/orange_button_left_right_padding</item>
        <item name="android:paddingRight">@dimen/orange_button_left_right_padding</item>
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:paddingTop">@dimen/call_to_actions_padding</item>
        <item name="android:paddingBottom">@dimen/call_to_actions_padding</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>

    </style>
    
    <style name="blue_hyperlink">
        <item name="android:textColor">@color/blue_link</item>
        <item name="android:textSize">@dimen/body_copy_max</item>
        <item name="android:textStyle">bold</item>

    </style>
    
    <style name="login_bottom_bar_button">
        <item name="android:padding">@dimen/content_padding</item>
        <item name="android:textSize">@dimen/small_copy_min</item>
        <item name="android:background">@drawable/login_bottom_bar_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">@dimen/login_bottom_button_height</item>
    </style> 
    
    <style name="white_button">
        <item name="android:textColor">@color/body_copy</item>
        <item name="android:textSize">@dimen/body_copy_min</item>
        <item name="android:background">@drawable/white_button</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">@dimen/white_button_left_right_padding</item>
        <item name="android:paddingRight">@dimen/white_button_left_right_padding</item>
        <item name="android:layout_marginBottom">@dimen/between_related_elements_padding</item>
	    <item name="android:layout_marginRight">@dimen/between_related_elements_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>