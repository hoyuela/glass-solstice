<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- Theme.Sherlock.Light.DarkActionBar -->
    <style name="AppBaseTheme" parent="Theme.Sherlock">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->        
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppTheme.NoTitleBar" parent="Theme.Sherlock.NoActionBar">
    </style>
    
    <style name="BlackTheme">
        <item name="android:background">@drawable/login_bkgd</item>
    </style>

    <style name="WhiteTheme">
        <item name="android:background">@drawable/gradient_bg</item>
        <item name="android:paddingBottom">@dimen/content_padding</item>
        <item name="android:paddingLeft">@dimen/content_padding</item>
        <item name="android:paddingRight">@dimen/content_padding</item>
        <item name="android:paddingTop">@dimen/content_padding</item>
    </style>
    
    <style name="WhiteThemeFooter">
        <item name="android:textColor">@color/blue</item>
    </style>
    
    <style name="Theme.Splash" parent="android:Theme">
        <item name="android:background">@drawable/splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
</resources>