<manifest package="com.discover.mobile"
	android:versionCode="1"
	android:versionName="4.0" xmlns:android="http://schemas.android.com/apk/res/android">
	
	<uses-sdk android:minSdkVersion="10" android:targetSdkVersion="16" />
	
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<permission 
	    android:name="com.discover.mobile.permission.C2D_MESSAGE" 
	    android:protectionLevel="signature" /> 
	<uses-permission android:name="com.discover.mobile.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
	
	<application android:name=".DiscoverApplication"
		android:icon="@drawable/discove_mobile_icn"
		android:label="@string/app_name"
		android:allowBackup="false"
		android:theme="@style/AppTheme"
		android:logo="@drawable/discover_logo_inset">
		
	    <!--  Xtify Provider -->
	    <provider
            android:name="com.xtify.sdk.db.Provider"
            android:authorities="com.discover.mobile.XTIFY_PROVIDER"
            android:exported="false" />
	    <!--  Xtify Provider -->
    
		<activity android:name=".SplashScreenActivity"
			android:label="@string/app_name"
			android:noHistory="true"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity android:name=".StartActivity"
			android:label="@string/app_name"
			android:launchMode="singleTask"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.NoTitleBar" />

		<activity android:name=".login.LoginActivity"
			android:label="@string/app_name"
			android:launchMode="singleTask"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.NoTitleBar" />
		
		<activity android:name=".security.EnhancedAccountSecurityActivity"
			android:label="@string/app_name"
			android:launchMode="standard"
			android:screenOrientation="portrait"
			android:noHistory="true" />
		
		<activity android:name=".login.LockOutUserActivity"
			android:label="@string/app_name"
			android:launchMode="singleTask"
			android:screenOrientation="portrait" />
		
		<activity android:name=".login.register.RegistrationAccountInformationActivity"
			android:label="@string/app_name"
			android:launchMode="standard"
			android:screenOrientation="portrait" />
	
		<activity android:name=".login.register.ForgotPasswordAccountInformationActivity"
			android:label="@string/app_name"
			android:launchMode="standard"
			android:screenOrientation="portrait" />
	
		<activity android:name=".login.register.ForgotBothAccountInformationActivity"
			android:label="@string/app_name"
			android:launchMode="standard"
			android:screenOrientation="portrait" />
		
		<activity android:name=".login.register.CreateLoginActivity"
			android:label="@string/app_name"
			android:launchMode="standard"
			android:screenOrientation="portrait" />
		
		<activity android:name=".login.register.AccountInformationConfirmationActivity"
			android:label="@string/app_name"
			android:launchMode="singleTask"
			android:screenOrientation="portrait"
			android:noHistory="true" />
		
		<activity android:name=".login.register.StrengthBarHelpActivity"
			android:label="@string/app_name"
			android:launchMode="singleTask"
			android:screenOrientation="portrait" />
		
		<activity android:name=".login.register.ForgotTypeSelectionActivity"
			android:label="@string/app_name"
			android:launchMode="singleTask"
			android:screenOrientation="portrait"
			android:noHistory="true" />
		
		<activity android:name=".login.register.ForgotUserIdActivity"
			android:label="@string/app_name"
			android:launchMode="singleTask"
			android:screenOrientation="portrait"
			android:noHistory="true" />
		
		<activity android:name=".login.register.EnterNewPasswordActivity"
			android:label="@string/app_name"
			android:launchMode="singleTop"
			android:screenOrientation="portrait" />
	
		<activity android:name=".navigation.NavigationMenuRootActivity" />
		
		<!--  Xtify Setup -->
		<receiver android:name="com.xtify.sdk.c2dm.C2DMBroadcastReceiver" >
            <intent-filter android:permission="com.google.android.c2dm.permission.SEND" >
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.discover.mobile" />
            </intent-filter>
            <intent-filter android:permission="com.google.android.c2dm.permission.SEND" >
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.discover.mobile" />
            </intent-filter>
        </receiver>
        
        <receiver android:name=".common.push.XtifyNotifier">
            <intent-filter>
                <action android:name="com.xtify.sdk.NOTIFIER" />
            </intent-filter>
        </receiver>
        
        <receiver android:name="com.xtify.sdk.NotifActionReceiver" />
        
        <receiver android:name="com.xtify.sdk.wi.AlarmReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name="com.xtify.sdk.location.LocationUpdateService" />
        <service android:name="com.xtify.sdk.c2dm.C2DMIntentService" />
        <service android:name="com.xtify.sdk.alarm.MetricsIntentService" />
        <service android:name="com.xtify.sdk.alarm.TagIntentService" />
        <service android:name="com.xtify.sdk.alarm.RegistrationIntentService" />
        <service android:name="com.xtify.sdk.alarm.LocationIntentService" />
		
		<!--  End Xtify Setup -->
        <activity android:name=".push.PushManageFragment">
        </activity>
        <activity android:name=".push.PushTermsAndConditionsActivity"></activity>
        <activity android:name=".navigation.NavigationRootActivity"></activity>
    </application>
    
</manifest>
