<resources>

 <!-- Confirmation Screen Styles -->
    <style name="confirmation_info_header_text">
        <item name="android:textColor">@color/field_copy</item>
        <item name="android:textSize">@dimen/small_copy_min</item>
        <item name="android:layout_marginTop">@dimen/table_inner_padding</item>
    </style>

    <style name="confirmation_info_value_text">
        <item name="android:textColor">@color/body_copy</item>
        <item name="android:textSize">@dimen/small_copy_max</item>
        <item name="android:textStyle">bold</item>
    </style>    
    
    <!-- Style for strength level in help guide -->
    <style name="strength_help_level_message" parent="title_copy">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <!-- Style for action message in help guide -->
    <style name="action_message" parent="small_copy">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/sub_copy</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    
 	<style name="special_push_orange_button" parent="call_to_action_theme">
        <item name="android:textSize">@dimen/small_copy_mid</item>
    </style>
    
    <style name="push_toggle_box_default">
        <item name="android:padding">@dimen/between_related_elements_padding</item>
        <item name="android:layout_marginLeft">@dimen/between_related_elements_padding</item>
        <item name="android:background">@drawable/gray_gradient_square</item>
        <item name="android:src">@drawable/transparent_square</item>
    </style>

    <style name="push_toggle_box_text_style">
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="push_header_text_style">
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/body_copy_min</item>
    </style>

    <style name="push_toggle_item_secondary_text">
        <item name="android:textColor">@color/sub_copy</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="push_expand_item" parent="@style/blue_hyperlink">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="push_header_item_text">
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="push_phone_number_text">
        <item name="android:textColor">@color/sub_copy</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="push_phone_number">
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="push_change_number">
        <item name="android:textColor">@color/blue_link</item>
        <item name="android:textSize">@dimen/small_copy_max</item>
    </style>

    <style name="push_manage_header_style">
        <item name="android:padding">@dimen/forms_inner_padding</item>
        <item name="android:background">@drawable/notification_list_item</item>
        <item name="android:layout_marginTop">@dimen/groups_of_elements_padding</item>
    </style>

    <style name="push_toggle_text">
        <item name="android:textColor">@color/body_copy</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="push_manage_save_success">
        <item name="android:textColor">@color/orange_link_idicator</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    
</resources>