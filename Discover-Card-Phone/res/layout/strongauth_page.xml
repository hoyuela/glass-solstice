<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    style="@style/default_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/light_gray_bkgrd"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <TextView
                android:id="@+id/account_security_server_error"
                style="@style/error_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/account_security_answer_doesnt_match" />

            <TextView
                android:id="@+id/account_security_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_security_server_error"
                android:layout_marginTop="14dp"
                android:text="@string/account_security_text"
                android:textColor="@color/title"
                android:textSize="24sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/account_security_info_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/account_security_label"
                android:layout_alignRight="@+id/account_security_question_answer_field"
                android:layout_below="@+id/account_security_label"
                android:layout_marginTop="14dp"
                android:text="@string/account_security_info_text"
                android:textColor="@color/title"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/account_security_question_placeholder_label"
                style="@style/smallest_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_security_info_label"
                android:layout_marginTop="16dp"
                android:text="@string/account_security_placeholder_text"
                android:textColor="@color/field_copy"
                android:textSize="14sp"
                android:textStyle="normal" />

            <com.discover.mobile.card.common.uiwidget.NonEmptyEditText
                android:id="@+id/account_security_question_answer_field"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/account_security_question_placeholder_label"
                android:layout_marginTop="@dimen/top_margin_betwwn_components"
                android:hint="Your Answer"
                android:imeOptions="actionDone"
                android:inputType="textNoSuggestions"
                android:textColor="@color/card_field_color"
                android:textCursorDrawable="@null"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/error_message_strong_auth"
                style="@style/error_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_security_question_answer_field"
                android:layout_marginTop="@dimen/top_margin_betwwn_components"
                android:text="@string/account_security_answer_doesnt_match" />

            <TextView
                android:id="@+id/account_security_remember_device_label"
                style="@style/smallest_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/error_message_strong_auth"
                android:layout_marginTop="14dp"
                android:text="@string/account_security_remember_device_text" />

