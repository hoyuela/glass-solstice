            <RadioGroup
                android:id="@+id/account_security_choice_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_security_remember_device_label"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_table_corners_no_padding"
                android:divider="@drawable/modal_divider_line"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/account_security_choice_one_radio"
                    style="@style/card_strongauth_ans_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/card_radio_orange"
                    android:drawablePadding="@dimen/forms_inner_padding"
                    android:padding="@dimen/forms_inner_padding"
                    android:text="@string/account_security_remember_me_text" />
			 <View
                    android:id="@+id/account_security_separator_line_one"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c0c8cc" />

                <RadioButton
                    android:id="@+id/account_security_choice_two_radio"
                    style="@style/card_strongauth_ans_selection"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/card_radio_orange"
                    android:drawablePadding="@dimen/forms_inner_padding"
                    android:padding="@dimen/forms_inner_padding"
                    android:text="@string/account_security_dont_remember_me_text" />
            </RadioGroup>

            <Button
                android:id="@+id/account_security_continue_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_security_choice_radio_group"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/orange_button_margin_top"
                android:layout_marginTop="@dimen/orange_button_margin_top"
                android:background="@drawable/card_action_orange_button"
                android:onClick="submitSecurityInfo"
                android:paddingLeft="52dp"
                android:paddingRight="52dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/continue_text"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <include
                android:id="@+id/enter_info_footer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/account_security_continue_button"
                android:layout_marginBottom="20dp"
                layout="@layout/card_fragment_footer" />
        </RelativeLayout>
    </RelativeLayout>

