            <RadioGroup
                android:id="@+id/account_security_choice_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_security_question_answer_field"
                android:layout_marginTop="@dimen/top_margin_betwwn_components"
                android:background="@drawable/rounded_table_corners_no_padding"
                android:divider="@drawable/modal_divider_line"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/account_security_choice_one_radio"
                    style="@style/strongauth_ans_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/custom_radio_check"
                    android:drawablePadding="@dimen/forms_inner_padding"
                    android:padding="@dimen/forms_inner_padding"
                    android:text="@string/account_security_remember_me_text" />

                <View
                    android:id="@+id/account_security_separator_line_one"
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:background="@drawable/row_shadow" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_list_item" />

                <RadioButton
                    android:id="@+id/account_security_choice_two_radio"
                    style="@style/strongauth_ans_selection"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/custom_radio_check"
                    android:drawablePadding="@dimen/forms_inner_padding"
                    android:padding="@dimen/forms_inner_padding"
                    android:text="@string/account_security_dont_remember_me_text" />
            </RadioGroup>

            <Button
                android:id="@+id/account_security_continue_button"
                style="@style/call_to_action_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_security_choice_radio_group"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/orange_button_margin_top"
                android:layout_marginTop="@dimen/orange_button_margin_top"
                android:onClick="submitSecurityInfo"
                android:text="@string/continue_text" />
