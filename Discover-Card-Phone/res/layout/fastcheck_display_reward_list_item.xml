<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/default_list_item"
    android:paddingBottom="@dimen/table_inner_padding">

    <ImageView
	    android:id="@+id/error_img"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/error_img"
	    android:contentDescription="@string/fast_check_error_img_desc"/>
    
    <TextView
        android:id="@+id/balance_label"
    	style="@style/field_copy_small"
    	android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/error_img"/>

    <TextView
        android:id="@+id/balance_value"
		style="@style/title_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/balance_label"
        android:layout_below="@id/balance_label"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/balance_value"
	    android:orientation="horizontal"
	    android:gravity="bottom">
	        
	    <ImageView
	        android:id="@+id/divider_line"
	        android:layout_width="1dp"
	        android:layout_height="14sp"
	        android:background="@color/field_stroke" 
	        android:visibility="gone"/>

	    <TextView
	        android:id="@+id/action_text"
	        style="@style/blue_hyperlink_extra_small"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/between_related_elements_padding"/>
    </LinearLayout>

</RelativeLayout>