<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WhiteTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

     <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/modal_bottom_margin"
        android:orientation="vertical"
        android:paddingLeft="@dimen/forms_inner_padding"
        android:paddingRight="@dimen/forms_inner_padding" >
        

        <include
            android:id="@+id/reg_help_weak_pswd"
            layout="@layout/register_help_strength_item" />

        <include
            android:id="@+id/reg_help_mod_pswd"
            layout="@layout/register_help_strength_item" />

        <include
            android:id="@+id/reg_help_strong_pswd"
            layout="@layout/register_help_strength_item"/>

        <include
            android:id="@+id/reg_help_footer"
            layout="@layout/new_general_need_help_footer" />

        <TextView
            android:id="@+id/provide_feedback_button"
            style="@style/blue_hyperlink_small"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_help_footer"
            android:layout_marginBottom="@dimen/orange_button_margin_top"
            android:layout_marginTop="@dimen/orange_button_margin_top"
            android:gravity="center"
            android:text="@string/feedback_text" />

    </LinearLayout>

</ScrollView>