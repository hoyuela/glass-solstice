<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/card_body_color"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="@dimen/forms_inner_padding"
            android:paddingRight="@dimen/forms_inner_padding" >

            <TextView
                android:id="@+id/forgot_id_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:includeFontPadding="false"
                android:text="@string/forgot_id_title_text"
                android:textColor="#293033"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/forgot_id_submission_error_label"
                style="@style/error_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot_id_title_label"
                android:layout_marginBottom="3dp"
                android:includeFontPadding="false"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/forgot_id_account_num_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot_id_submission_error_label"
                android:layout_marginTop="16dp"
                android:includeFontPadding="false"
                android:text="@string/account_info_label_one"
                android:textColor="#8a9499"
                android:textSize="14sp"
                android:textStyle="normal" />

            <com.discover.mobile.card.common.uiwidget.UsernameOrAccountNumberEditText
                android:id="@+id/forgot_id_id_field"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/forgot_id_account_num_label"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/forgot_id_id_error_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot_id_id_field"
                android:includeFontPadding="false"
                android:text="@string/invalid_input"
                android:textColor="#ed1c24"
                android:visibility="gone" />

            <TextView
                android:id="@+id/account_information_input_info_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot_id_id_error_label"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="6dp"
                android:includeFontPadding="false"
                android:text="@string/account_info_input_restrictions_label"
                android:textColor="#8a9499"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/forgot_id_password_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_information_input_info_label"
                android:includeFontPadding="false"
                android:paddingTop="16dp"
                android:text="@string/forgot_id_password_text"
                android:textColor="#8a9499"
                android:textSize="14sp" />

            <com.discover.mobile.card.common.uiwidget.NonEmptyEditText
                android:id="@+id/forgot_id_password_field"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/forgot_id_password_label"
                android:inputType="textPassword"
                android:maxLength="32"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/forgot_id_pass_error_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot_id_password_field"
                android:includeFontPadding="false"
                android:text="@string/invalid_input"
                android:textColor="#ed1c24"
                android:visibility="gone" />

            <Button
                android:id="@+id/forgot_id_submit_button"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_below="@+id/forgot_id_password_field"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/card_action_orange_button"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/submit_text"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/account_info_cancel_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot_id_submit_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:includeFontPadding="false"
                android:text="@string/cancel_text"
                android:textColor="@color/footer_link"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_info_cancel_label"
                android:layout_marginTop="48dp" >

                <include layout="@layout/old_general_need_help_footer" />
            </RelativeLayout>
            <!-- Defect id 95853 -->
            <!--
                 <TextView
                android:id="@+id/provide_feedback_button"
                style="@style/blue_hyperlink_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/footer"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/orange_button_margin_top"
                android:layout_marginTop="@dimen/orange_button_margin_top"
                android:includeFontPadding="false"
                android:text="@string/feedback_text" />
            -->

            <RelativeLayout
                android:id="@+id/provide_feedback_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/footer" >

                <include
                    android:id="@+id/home_footer"
                    layout="@layout/card_fragment_footer" />
            </RelativeLayout>
            <!-- Defect id 95853 -->
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>