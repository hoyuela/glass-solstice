<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_selector_color"
    android:orientation="vertical" >

    <Button
        android:id="@+id/whats_new_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"        
        android:paddingRight="24dp"
        android:background="@color/title_selector_color"
        android:contentDescription="@string/desc"
        android:drawableRight="@drawable/whatnew_close_btn"
        android:gravity="center|right" />

    <TextView
        android:id="@+id/whats_new_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:text="@string/whats_new_titlebar"
        android:textColor="@color/title_selector_text_color"
        android:textSize="16sp"
        android:textStyle="bold" />
    
     <View
        android:id="@+id/whats_new_bottom_liner"
        android:layout_width="fill_parent"
        android:layout_height="2dp"       
         android:layout_below="@+id/whats_new_titlebar"                            
        android:background="@color/bottom_line" />
    

</RelativeLayout>