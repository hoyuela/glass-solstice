<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_body_color"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/forms_inner_padding" >

        <LinearLayout
            android:id="@+id/linear_layout_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/forgot_credentials_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:includeFontPadding="false"
                android:paddingLeft="16dp"
                android:text="@string/forgot_credentials_text"
                android:textColor="@color/title"
                android:textSize="24sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/general_list_item_separator_line_start"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:background="@color/card_line_separator" />

            <ListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:background="@color/card_body_color"
                android:divider="@color/card_line_separator"
                android:dividerHeight="1dp"
                android:scrollbars="none" >
            </ListView>

            <View
                android:id="@+id/general_list_item_separator_line_end"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/card_line_separator" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/provide_feedback_footer"  android:layout_marginTop="20dp"
            android:layout_width="match_parent" android:layout_below="@+id/linear_layout_one"
            android:layout_height="wrap_content" android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <include
                android:layout_height="86dp"
                layout="@layout/old_general_need_help_footer" />

            <include
                android:id="@+id/home_footer" android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/card_fragment_footer" />
        </LinearLayout>
        <!-- Defect id 95853 -->
    </RelativeLayout>

</ScrollView>