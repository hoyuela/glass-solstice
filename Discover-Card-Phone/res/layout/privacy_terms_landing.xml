<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:id="@+id/terms_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_body_color" >

        <LinearLayout
            android:id="@+id/privacylayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:id="@+id/line_start"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:background="@color/card_line_separator" />

            <include
                android:id="@+id/privacystatementrow"
                layout="@layout/privacy_terms_option" />

            <View
                android:id="@+id/general_list_item_separator_line_start"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/card_line_separator" />

            <include
                android:id="@+id/termsofuserow"
                layout="@layout/privacy_terms_option" />

            <View
                android:id="@+id/line_end"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/card_line_separator" />
        </LinearLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/forms_inner_padding"
            android:gravity="center_horizontal|bottom" >

            <TextView
                android:id="@+id/provide_feedback_button"
                style="@style/card_blue_hyperlink_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="18dp"
                android:text="@string/feedback_text"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>