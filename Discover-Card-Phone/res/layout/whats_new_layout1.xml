<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:fadingEdge="none"
    android:overScrollMode="never">
	
    <RelativeLayout 
        android:id="@+id/whats_new_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_gray_bkgrd"
        android:focusable="true"
        android:focusableInTouchMode="true" >       
        

        <TextView
            android:id="@+id/whats_new_content_heading"
            style="@style/title_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whats_new_image"
            android:paddingBottom="16dp"
            android:paddingLeft="24dp"
            android:textSize="22sp"
            android:paddingRight="24dp"
            android:paddingTop="24dp" />

        <TextView
            android:id="@+id/whats_new_content_description_label"
            style="@style/whatsnew_small_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whats_new_view_liner"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="16dp"
            android:textSize="14sp" />

       <ImageView
            android:id="@+id/whats_new_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"            
            android:contentDescription="@string/desc"
            android:scaleType="center" />

        <TextView
            android:id="@+id/whats_new_label"
            style="@style/whatsnew_small_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whats_new_content_description_label"
            android:paddingBottom="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="16dp"
            android:textSize="14sp" />

        <View
            android:id="@+id/whats_new_view_liner"
            android:layout_width="fill_parent"
            android:layout_height="1.0dp"
            android:layout_below="@+id/whats_new_content_heading"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@color/line_separator" />
    </RelativeLayout>

</ScrollView>