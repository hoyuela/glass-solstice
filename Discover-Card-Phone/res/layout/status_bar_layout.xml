<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@color/card_body_color" >

     <TextView
        android:id="@+id/account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="#293033"
        android:textSize="14sp"
        android:gravity="center"/>
     
      <ImageView
        android:id="@+id/cardBankIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"        
        android:layout_toRightOf="@+id/account_name"
        android:src="@drawable/card_icon" />
      
      <ImageView
        android:id="@+id/AC_orange_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cardBankIcon"
        android:paddingLeft="1dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"    
        android:paddingRight="15dp"
        android:src="@drawable/orange_arrow_down"
        android:clickable="true" />
      
      
