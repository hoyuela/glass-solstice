<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Border -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/field_copy" />
            <stroke  android:width="1dp" android:color="@color/field_copy"/>
        </shape>
    </item>

    <!-- Top color -->
    <item
        android:bottom="1dp"
        android:top="1dp"
        android:left="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="@color/field_copy"
                android:startColor="@color/body_copy" />
        </shape>
    </item>

</layer-list>