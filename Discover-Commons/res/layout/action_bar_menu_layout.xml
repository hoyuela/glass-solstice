<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/action_bar_background" >

    <ImageView
        android:id="@+id/navigation_button"
        style="@style/orange_action_bar_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gradient_line"
        android:layout_alignParentLeft="true"
        android:src="@drawable/sliding_drawer_white_icons" />

    <ImageView
        android:id="@+id/navigation_back_button"
        style="@style/orange_action_bar_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gradient_line"
        android:src="@drawable/back_arrow_white_icon" />

    <TextView
        android:id="@+id/title_view"
        style="@style/action_bar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/logout_button"
        android:layout_toRightOf="@+id/navigation_button" />

    <TextView
        android:id="@+id/logged_out_title_view"
        style="@style/action_bar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/action_bar_discover_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="3dp"
        android:background="@drawable/discover_blk_logo_login"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/gradient_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/stroke_ruling_line"
        android:src="@drawable/gradiant_line" />

    <ImageView
        android:id="@+id/logout_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/logout_button"
        android:layout_above="@+id/gradient_line"
        android:background="@drawable/log_out_button_line"
        android:visibility="gone" />

    <Button
        android:id="@+id/logout_button"
        style="@style/logout_actionbar_button"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/log_out_button"
        android:layout_above="@+id/gradient_line"
        android:text="@string/log_out"
        android:visibility="visible" />

</RelativeLayout>