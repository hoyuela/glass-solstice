<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_dropdown_item_background"
    android:padding="6dp">
    
    <TextView
        android:id="@+id/common_dropdown_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:textColor="@color/sub_copy"
        android:textAppearance="?android:attr/textAppearanceMedium" />
	
    <TextView
        android:id="@+id/common_dropdown_item_subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@+id/common_dropdown_item_title"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <ImageView 
        android:id="@+id/common_dropdown_selected_item_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/common_dropdown_item_title"
        android:src="@drawable/preferred_account_checkmark"
        android:visibility="gone"
        android:paddingTop="7dp" />
    
</RelativeLayout>