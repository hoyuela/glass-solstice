<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/common_dropdown_item_background"
    android:padding="6dp">

    <TextView
        android:id="@+id/common_dropdown_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:textColor="@color/sub_copy"
        android:text="My Checking Account"
        android:textSize="18sp"
        android:paddingBottom="2dp" />

    <TextView
        android:id="@+id/common_dropdown_item_subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Account Ending in 000"
        android:textColor="@color/field_copy"
        android:textSize="14sp" />

</LinearLayout>